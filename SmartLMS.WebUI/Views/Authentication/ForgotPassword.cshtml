@using SmartLMS.Domain.Resources
@model ForgotPasswordViewModel

@{
    ViewBag.Title = Resource.ForgotPasswordTitle;
    Layout = "~/Views/Authentication/_Layout.cshtml";
}


<div class="panel panel-primary card-signup">
    <div class="panel-heading">
        <div class="text-center panel-title">@Resource.ForgotPasswordTitle</div>
    </div>

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-12">
                @using (Html.BeginForm("ForgotPassword", "Authentication", FormMethod.Post))
                {
                    <div class="input-group">
                        <span class="input-group-addon">
                            <i class="material-icons">email</i>
                        </span>
                        <div class="form-group label-floating">
                            <label class="control-label">@Resource.ForgotPasswordLoginLabel</label>
                            @Html.TextBoxFor(x => x.Email, new {@class = "form-control"})
                        </div>
                    </div>
                    <div>
                        @Html.ValidationSummary(false, "", new {@class = "alert alert-danger text-danger"})
                        @if (!string.IsNullOrEmpty(ViewBag.Message))
                        {
                            <div class="alert alert-success">
                                @ViewBag.Message
                            </div>
                        }
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button name="login-submit" id="login-submit" class="btn btn-simple btn-primary">@Resource.SendButton</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                                @Html.ActionLink(Resource.BackToLogin, "Login", null, new {@class = "btn btn-simple forgot-password"})
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>