@using SmartLMS.Domain.Resources
<div class="modal fade" id="about" tabindex="-1" role="dialog" aria-labelledby="@Resource.AboutTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
                <h4 class="modal-title">@Resource.AboutTitle</h4>
            </div>
            <div class="modal-body">
                <p>
                    @Resource.AboutText
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-simple" data-dismiss="modal">@Resource.CloseButton</button>
            </div>
        </div>
    </div>
</div>
