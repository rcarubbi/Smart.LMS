@model CourseViewModel

<div class="item @Html.ViewData["activeItemCSSClass"]">
    <div class="col-md-6 col-sm-6 col-xs-12">
        <a href="@Url.Action("Index", "Class", new {Model.Id})">
            <figure class="cap-bot">
                <img src="~/Content/img/courses/@(Model.Image ?? "no-image.png")" class="img-responsive">
                <figcaption>
                    <i class="fa fa-graduation-cap"></i> @Model.Name
                </figcaption>
            </figure>
        </a>
    </div>
</div>